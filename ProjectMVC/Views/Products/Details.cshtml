@model ProjectMVC.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="content mt-5">
    <div class="container">

        <div class="row">
    <div class="col-md-4">
       
               <div class="form-group">
                <label class="control-label">Image</label>
                  <br />
             
                 <img id="FrontImage" src="~/images/@Model.ImgPath" alt="Product Image" width="150" height="150" style="border:1px;"/>
                </div>


            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label  class="control-label">Category</label>
                <input asp-for="@Model.Category.Name" class="form-control" readonly/>
            </div>



        @*    <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" readonly />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>*@
             <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" readonly></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" readonly />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumInStock" class="control-label"></label>
                <input asp-for="NumInStock" class="form-control" readonly />
                <span asp-validation-for="NumInStock" class="text-danger"></span>
            </div>
         
           
            <div class="form-group">
               <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success float-right" >Edit</a> 
                <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
            </div>
 
    </div>
</div>



    </div>
</div>



