@using ProjectMVC.ViewModel
@model IEnumerable<ProductVM>
   
        <div class="row">
            @foreach(var element in @Model)
            {
                <partial name ="ProductItem" model="@element"/>
            }
        </div>
        <div class="col-lg-12 text-center">
            <div class="pagination__option" id = "pageNo">
                @foreach(var item in Enumerable.Range(1, (int)ViewData["numOfPages"]))
                {
                    <a onclick="requestedPageNumber(this.innerHTML)">@item</a>
                }
            </div>
        </div>
    